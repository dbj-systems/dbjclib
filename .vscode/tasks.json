{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "del /s *.obj *.exe *.pdb *.ilk",
            "problemMatcher": []
        },
        {
            "label": "debug_build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/MDd",
                "/Zi",
                "/Fe:",
                "${workspaceFolder}\\sampling\\dbjclib_dbg.exe",
                "${workspaceFolder}\\*.c",
                "${workspaceFolder}\\sampling\\*.c",
                "${workspaceFolder}\\dbj_fb_string\\*.c",
                "${workspaceFolder}\\dbj_sll\\*.c",
                "${workspaceFolder}\\dbj_str_trim\\*.c",
                "${workspaceFolder}\\dbj_string\\*.c",
                "${workspaceFolder}\\dbj_string_list\\*.c",
                "${workspaceFolder}\\sampling\\munit\\*.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "msvc release build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/MDd",
                "/Fe:",
                "${workspaceFolder}\\sampling\\dbjclib.exe",
                "${workspaceFolder}\\*.c",
                "${workspaceFolder}\\sampling\\*.c",
                "${workspaceFolder}\\sampling\\munit\\*.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}